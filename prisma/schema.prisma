generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Tasks {
  id           String   @id @default(uuid())
  name         String   @db.VarChar(50)
  description  String   @db.VarChar(100)
  difficult    Int?
  status       String?
  type         String
  createdAt    DateTime @default(now())
  expirationAt String?
}

model User {
  id               String @id @default(uuid())
  username         String @db.VarChar(50)
  email            String
  role             String
  level            Int
  photo            String
  progress         Int
  reachToNextLevel Int
}
